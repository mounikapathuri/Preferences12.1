<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Setting">

        <EditTextPreference
            android:title="Password"
            android:summary="Set Your Password"
            android:key="UserPasswaod"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Security Setting">

        <CheckBoxPreference
            android:title="Screen Lock"
            android:key="LockScreen"
            android:defaultValue="false"
            android:summary="Lock screen with password"/>

        <ListPreference
            android:title="Reminder for updation"
            android:key="UpdateFrequency"
            android:summary="Set update reminder frequency"
            android:entries="@array/updateFrequency"
            android:entryValues="@array/updateFrequencyValues"/>
    </PreferenceCategory>
</PreferenceScreen>